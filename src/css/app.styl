.sticky-table {
    max-height: $stickyTableHeight
    &.full {
        max-height: 100vh;
        background-color: white;
    }
}
.custom-table-wrapper {
    &.my-sticky-header-column-table {
        &.full {
          background-color: white;
            .q-table__middle {
                max-height: 85%
            } 
        }
        /* specifying max-width so the example can
        highlight the sticky column on any browser window */
        // max-width: 600px
        max-height: inherit
        /* max height is important */
        .q-table__middle {
            max-height: $stickyTableMiddle
        } 
        td:first-child /* bg color is important for td; just specify one */ {
            background: lighten($secondary, 10%) !important
        }
        td:first-child, td:nth-child(2) {
            opacity: 1 !important
        }
        tr:first-child th, tr:nth-child(2) th {
            position: sticky
            top: 0
            opacity: 1 /* opacity is important */
            z-index: 2 /* higher than z-index for td below */
            background: #fff /* bg color is important; just specify one */
        } 
        tr:first-child th:first-child, tr:first-child th:nth-child(2) {
            z-index: 3 /* highest z-index */
        }
        td:first-child, td:nth-child(2) {
            z-index: 1
        }
        td:first-child, th:first-child {
            position: sticky
            left: 0
        }
        td:nth-child(2), th:nth-child(2) {
            position: sticky
            left: 45px
        }
        tr.deleted {
            opacity: 1
            background: rgb(255,230,230);
            td {
                background: inherit;
                opacity: .5
            }
            &.selected {
                td {
                    background: rgb(230,190,190);
                    opacity: .8
                    * {
                        opacity: .8
                    }
                }
            }
        }
        tr.selected {
            td {
                background: rgb(225,225,225);
            }
        }
    }
    &.filter {
        .q-radio__label {
            font-size: .6em;
        }
        .q-field__control {
            height: 30px;
        }
    }
    &.mobileÂ {
      &.full {
        max-height: 100vh;
        background-color: white;
        .q-table__top {
          padding: 0;
          position: fixed;
          top: 0;
          z-index: 1000;
          background-color: white;
          height: 115px;
        }
        .q-table__middle {
          height: 30px;
          padding: 0;
          position: fixed;
          top: 115px;
          z-index: 1001;
          .q-table {
            background-color: $secondary;
          }
        }
        > div.row:nth-child(3) {
          padding-top: 145px;
        }
      }
      .q-table__top {
        padding: 5px;
      }
    }
    .q-table {
        background: rgba(255,255,255,1);
        tr td { 
            font-size: .9em;
            // color: red;
            .q-btn__content {
                flex-wrap: nowrap;
            }
        }
        td {
            &.row-checkbox {
                background: rgba($primary, .1);
                .q-checkbox__bg {
                    border-color: $primary
                }
            }
            &.first {
                background: lighten($secondary, 50%);
            }
        }
        tr.deleted {
            background: rgb(255,230,230);
            td > * {
                opacity: .5
            }
        }
        tr.mobile-header-tr {
          display: block;
          max-width: 100vw;
          overflow: auto;
          padding: 0 3px;
        }
        .filtered {
            opacity: 1;
            color: $primary;
            font-weight: 900;
            .q-table__filter-icon {
                // transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.5, 1);
                opacity: 1;
                font-size: 130%;
                font-weight: 900;
                color: $primary
            }
        }
    }
}
